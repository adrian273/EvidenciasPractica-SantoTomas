<form id="gform" onsubmit="return false;">
<table border="0" width="100%" height="100%" cellpadding="0" cellspacing="4"> 
  <tr id="document-1">
    <td class="ftitle">Document 8606-A 
      {if $upload_document_name != '' }
      <a href="{$base_url}datastore/form8606a/{$upload_document_name}" target="_blank">Click to Open</a><br>
      {/if}
    </td>
    <td>
      {if $upload_document_name != '' }
      <a href="javascript://" onclick="removeScannedDocument({$visit_log_id}, 1)" style="color: red;">Click to Remove</a><br><br>
      {else}
      Not Exist
      {/if}
    </td>    
  </tr>
  <tr>
    <td colspan="2" height="20"></td>
  </tr>
  <tr id="document-2">
    <td class="ftitle">Document Addendum 8606-A 
      {if $upload_document_name2 != '' }
      <a href="{$base_url}datastore/form8606a/{$upload_document_name2}" target="_blank">Click to Open</a><br>
      {/if}
    </td>
    <td>
      {if $upload_document_name2 != '' }
      <a href="javascript://" onclick="removeScannedDocument({$visit_log_id}, 2)" style="color: red;">Click to Remove</a><br><br>
      {else}
      Not Exist
      {/if}
    </td>    
  </tr>  
  <tr>
    <td colspan="2" height="100%" valign="bottom">
      <input type="button" class="btn" value="{$grl_cancel}" onclick="parent.dhxWins.window('w1').close()">
    </td>
  </tr>
</table> 
</form>

<script type="text/javascript">
  function removeScannedDocument(visit_log_id, doc_number) {literal}{{/literal}
        var doc_name = doc_number;
        if (doc_number == 1) 
          doc_name = '8606-A';
        else if (doc_number == 2)
          doc_name = 'Addendum 8606-A';

        if (confirm('Are you sure want to remove scanned document '+doc_name+'?')) {literal}{{/literal}
            var url = '{$index_url}task/form8606A/remove_document/{$visit_log_id}/'+doc_number;
            var visit_url = '{$index_url}task/form8606A/index/{$visit_log_id}';
            {literal}
            $.ajax({
                type: "GET",
                dataType: 'json',
                url: url,
                // data: params,
                success: function(data){
                    if(data=='1'){
                        parent.location.href=visit_url;
                    } else {
                        alert('document can\'t be removed!');
                    }
                },  
                error: function (data, status, e)
                {
                    alert('An error occured. check your internet connection');
                }
            });
            {/literal}    
        {literal}}{/literal}
    {literal}}{/literal}
</script>

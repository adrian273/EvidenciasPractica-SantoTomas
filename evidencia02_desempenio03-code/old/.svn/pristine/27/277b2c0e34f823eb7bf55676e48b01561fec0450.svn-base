	function get ( $template_id ) {
		
		$this->db->where('tpl_stev_id', $template_id);
	
		$query = $this->db->get('tpl_stev');
		return $query->row();
		
	}
	
	function getByUserId ( $user_id ) {
		
		$this->db->where('user_id', $user_id);
	
		$query = $this->db->get('tpl_stev');
		return $query->result2('tpl_stev_id', 'tpl_stev_name');
		
	}

	function insert ( $user_id, $template_name ) {

		$this->user_id = $user_id;
		$this->tpl_stev_name = $template_name;
		
		$this->db->insert('tpl_stev', $this);
		return $this->db->insert_id();	
	}

	function update ( $tpl_stev_id ) {
		unset($this->tpl_stev_id);
		unset($this->user_id);
		$this->db->where('tpl_stev_id', $tpl_stev_id);
		$this->db->update('tpl_stev', $this);
	}

	function updateFlex($tpl_stev_id, $attribute, $value, $where = 'tpl_stev_id') {
		$this->db->where($where, $tpl_stev_id);
		$this->db->set($attribute, $value);

		$this->db->update('tpl_stev');
	}	

	function delete ( $tpl_stev_id, $user_id ) {
        $this->db->where('user_id', $user_id);
        $this->db->where('tpl_stev_id', $tpl_stev_id);
        $this->db->delete('tpl_stev');

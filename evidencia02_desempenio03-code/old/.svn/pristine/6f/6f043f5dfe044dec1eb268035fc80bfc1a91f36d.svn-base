<table border=0 cellpadding="1" cellspacing=1 width="100%">
	<tr>
		<td class="ftitle" >Pharmacy Name<input type="hidden" name="patient_id" value="{$med->patient_id}"></td>
		<td><input type="text" name="pharmacy_name" value="{$pharmacy_name}"> *</td>
	</tr>
	<tr>
		<td class="ftitle">Address</td>
		<td><textarea name="pharmacy_address">{$pharmacy_address}</textarea></td>
	</tr>
	<tr>
		<td class="ftitle" >City</td>
		<td><input type="text" name="pharmacy_city" value="{$pharmacy_city}"></td>
	</tr>
	<tr>
	    <td class="ftitle">State</td>
	    <td>{html_options options=$state_list selected=$pharmacy_state name='pharmacy_state'}</td>
   	</tr>
	<tr>
		<td class="ftitle" >Zip</td>
		<td><input type="text" name="pharmacy_zip" value="{$pharmacy_zip}"></td>
	</tr>
	<tr>
		<td class="ftitle" >Phone</td>
		<td><input type="text" name="pharmacy_phone" value="{$pharmacy_phone}"></td>
	</tr>
	<tr>
		<td class="ftitle" >Fax</td>
		<td><input type="text" name="pharmacy_fax" value="{$pharmacy_fax}"></td>
	</tr>
	<tr>
		<td class="ftitle">Comments</td>
		<td><textarea name="pharmacy_comments">{$pharmacy_comments}</textarea></td>
	</tr>					
</table>
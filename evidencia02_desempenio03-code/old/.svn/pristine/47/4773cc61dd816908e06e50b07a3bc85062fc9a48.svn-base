				$this->email->attach($path . "/" . $attachment); // attach the attachment if exists
			}
			$this->email->subject($subject);
			$this->email->send();
			// echo $this->email->print_debugger();
			$this->email->clear(true);
			echo "Email has been sent";
	    }

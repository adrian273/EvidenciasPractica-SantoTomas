<table width="100%" border=0 cellpadding=5 cellspacing=1>
	
	<tr>
		<td class="ftitle" width="200">Date</td>
		<td>{$note_date|date_format:"%m-%d-%Y %I:%M %p"}</td>
	</tr> 
	
	<tr>
		<td class="ftitle" width="200">Note</td>
	</tr>
	
	<tr>
		<td colspan="3">
			<textarea name="note" id="note" style="width:50%;" wrap="auto" rows="10">{$note}</textarea>
		</td>
	</tr>
	
</table>

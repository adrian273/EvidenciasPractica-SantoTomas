	function get ( $visit_log_id ) {
	
		$this->db->where('visit_log_id', $visit_log_id);
	
		$query = $this->db->get('vt_hha_plan_care');
		return $query->row();
	
	}

	function insert () {
	
		$this->db->insert('vt_hha_plan_care', $this);
	
	}
	
	function update ( $visit_log_id ) {
	
		unset($this->hha_plan_care_id);
	
		$this->db->where('visit_log_id', $visit_log_id);
	
		$this->db->update('vt_hha_plan_care', $this);
	
	}
	
	function getPreviousPoc ( $cms485_id, $visit_date ) {
	
		$this->db->join('vis_visit_log', 'vis_visit_log.visit_log_id = vt_hha_plan_care.visit_log_id');
		
		$this->db->where('vis_visit_log.cms485_id', $cms485_id);
		$this->db->where('vis_visit_log.visit_date_time <=', $visit_date);
		$this->db->where('vis_visit_log.visit_status_id', 4);
	
		$this->db->order_by('visit_date_time', 'DESC');
		
		$this->db->limit(1);
	
		$query = $this->db->get('vt_hha_plan_care');
		
		return $query->row();
	
	}
	
	function getPreviousPocSoc ( $soc_id, $cms485_id, $visit_date ) {
	
		$this->db->join('vis_visit_log', 'vis_visit_log.visit_log_id = vt_hha_plan_care.visit_log_id');
		$this->db->join('cms_485', 	     'cms_485.cms485_id = vis_visit_log.cms485_id');
		
		$this->db->where('cms_485.soc_id', $soc_id);
		$this->db->where('vis_visit_log.cms485_id != ' . $cms485_id);
		$this->db->where('vis_visit_log.visit_date_time <=', $visit_date);
		$this->db->where('vis_visit_log.visit_status_id', 4);
	
		$this->db->order_by('visit_date_time', 'DESC');
		
		$this->db->limit(1);
	

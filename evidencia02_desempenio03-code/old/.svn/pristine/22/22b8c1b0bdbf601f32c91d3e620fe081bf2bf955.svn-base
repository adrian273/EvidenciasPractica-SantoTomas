<table border="0" height="100%" width="100%" cellpadding="0" cellspacing="4"> 
 <form id="gform" method="POST" action="{$index_url}{$resource_path}/modalAddPhysician/{$physician}">
  <tr>
    <td colspan="2" height="10"></td>
  </tr> 
  <tr>
    <td class="ftitle">Email</td>
  </tr> 
  <tr>
    <td>
    	<input type="text" name="user_email" value="{$user_email}"> *
    </td>
  </tr>
  <tr>
    <td class="ftitle">Confirm Email</td>
  </tr> 
  <tr>
    <td>
    	<input type="text" name="email_confirm" value="{$email_confirm}"> *
    </td>
  </tr>
  <tr>
    <td class="ftitle">Physician First Name</td>
  </tr> 
  <tr>
    <td>
    	<input type="text" name="first_name" value="{$first_name}"> *
    </td>
  </tr>
  <tr>
    <td class="ftitle">Physician Last Name</td>
  </tr> 
  <tr>
    <td>
    	<input type="text" name="last_name" value="{$last_name}"> *
    </td>
  </tr>
  <tr>
    <td class="ftitle">Upin</td>
  </tr> 
  <tr>
    <td>
    	<input type="text" id="upin" name="upin" value="{$upin}">
    </td>
  </tr>
  <tr> 
    <td valign="bottom" height="100%">
  		<input type="submit" name="submit" class="btn" value="{$grl_save}">
  		<input type="button" class="btn" value="{$grl_cancel}" onclick="parent.dhxWins.window('w1').close()">
    </td>
  </tr>
 </form>
</table> 

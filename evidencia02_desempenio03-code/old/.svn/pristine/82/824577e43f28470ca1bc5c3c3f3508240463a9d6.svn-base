<table border="0" width="100%" cellpadding="0" cellspacing="4"> 
  <input type="hidden" name="faq_id" value="{$record_id}">
  <input type="hidden" name="faq_group_id" value="{$entity_id}">
  <tr>
    <td class="ftitle">Group Name *</td>
    <td>
    	{$faq_group_name} 
    </td>
  </tr>  
  <tr>
    <td class="ftitle">Question *</td>
    <td>
    	<input type="text" name="title" value="{$title}" style="width: 800px;">
    </td>
  </tr>  
  <tr>
    <td class="ftitle" valign="top">Answer *</td>
    <td>
      {$fck_answer}
    	{*<textarea name="answer" rows="10" style="width: 500px;">{$answer}</textarea>*}
    </td>
  </tr>  
  <tr>
    <td class="ftitle" valign="top">Publish *</td>
    <td>
    	<label><input type="radio" name="publish" value="yes" {if $publish eq "yes"}checked="checked"{/if}> Yes</label>
    	<label><input type="radio" name="publish" value="no" {if $publish eq "no"}checked="checked"{/if}> No</label>
    </td>
  </tr> 
  <tr>
    <td class="ftitle">Sequence</td>
    <td>
      <input type="text" name="sequence" value="{$sequence}"> *
    </td>
  </tr>   
</table> 

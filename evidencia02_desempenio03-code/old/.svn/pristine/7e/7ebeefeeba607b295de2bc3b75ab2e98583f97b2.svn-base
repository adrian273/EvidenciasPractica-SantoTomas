<table border="0" width="100%" cellpadding="0" cellspacing="4"> 
  <tr>
    <td colspan="4" class="subtitle"><img src="{$image_url}button_small_side.png" style="vertical-align: middle"> Facility Information</td>
  </tr> 
  <tr>
    <td colspan="4" height="10"></td>
  </tr> 
  <tr>
    <td class="ftitle">Facility Name</td>
    <td><input type="text" name="facility_name" value="{$facility_name}"> *</td>
    <td class="ftitle">Facility Type</td>
    <td>{html_options options=$facility_type_list name='tab_031_fac_type' selected=$tab_031_fac_type} *</td>
  </tr>
  <tr>
    <td class="ftitle">Address</td>
    <td><input type="text" name="address" value="{$address}"></td>
    <td class="ftitle">Facility Number</td>
    <td><input type="text" name="facility_nbr" value="{$facility_nbr}"></td>
  </tr>
  <tr>
    <td class="ftitle">City</td>
    <td><input type="text" name="city" value="{$city}"></td>
    <td class="ftitle">Phone 1</td>
    <td><input type="text" name="phone1" value="{$phone1}"></td>
  </tr>
  <tr>
    <td class="ftitle">State</td>
    <td>{html_options options=$state_list selected=$state_id name='state_id'}</td>
    <td class="ftitle">Phone 2</td>
    <td><input type="text" name="phone2" value="{$phone2}"></td>
  </tr>
  <tr>
    <td class="ftitle">Zip Code</td>
    <td><input type="text" name="zip" value="{$zip}"></td>
    <td class="ftitle">Fax</td>
    <td><input type="text" name="fax" value="{$fax}"></td>
  </tr>
  <tr>
    <td class="ftitle">Email</td>
    <td><input type="text" name="email" value="{$email}"></td>
  </tr>
  
  <tr>
    <td colspan="4" class="subtitle"><img src="{$image_url}button_small_side.png" style="vertical-align: middle"> Facility Contact</td>
  </tr> 
  <tr>
    <td colspan="4" height="10"></td>
  </tr>
  <tr>
    <td class="ftitle">Contact Name</td>
    <td><input type="text" name="contact_name" value="{$contact_name}"></td>
    <td class="ftitle">Contact Cell Phone</td>
    <td><input type="text" name="contact_cell_phone" value="{$contact_cell_phone}"></td>
  </tr>
  <tr>
    <td class="ftitle">Contact Email</td>
    <td><input type="text" name="contact_email" value="{$contact_email}"></td>
  </tr>

  <tr>
    <td colspan="4" class="subtitle"><img src="{$image_url}button_small_side.png" style="vertical-align: middle"> Comments</td>
  </tr> 
  <tr>
    <td colspan="4" height="10"></td>
  </tr>
  <tr>
    <td colspan="2">
    	<textarea name="notes" rows="5" cols="50" wrap="auto">{$notes}</textarea>
    </td>
  </tr>
</table> 

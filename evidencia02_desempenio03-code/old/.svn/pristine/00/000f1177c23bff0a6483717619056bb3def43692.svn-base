{literal}
<style type="text/css">
    #a_tabbar {width: 100%;}
    @media only screen and (device-width: 768px) {
      /* For general iPad layouts */
      #a_tabbar {width: 768px;}
    }
</style>
{/literal}

<table border="0" height="100%" width="100%" cellpadding="2" cellspacing="0" align="center">
    <tr>
        <td height="100%" width="100%">

			<div hrefmode="iframes-refresh-always" tabstyle="dhx_blue" id="a_tabbar" select="{$active_tab}" class="dhtmlxTabBar" imgpath="{$base_url}style/tab/imgs/" style="height:100%;"  skinColors="#f4f4f4,#F4F3EE">
			    <div id="inbox" width="99" name="Inbox" href="{$index_url}mail/inbox/index{if $active_tab == 'inbox' && $msg_sent == 1}/1{/if}"></div>
			    <div id="sent" width="99" name="Sent" href="{$index_url}mail/sent"></div>
			    <div id="trash" width="99" name="Trash" href="{$index_url}mail/trash"></div>
			</div>

		</td>
    </tr>
</table>

<script language="JavaScript" type="text/javascript">

		document.body.style.overflow = 'hidden';

</script>

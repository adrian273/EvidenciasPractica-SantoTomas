<table border="0" width="100%" height="100%" cellpadding="0" cellspacing="4"> 
 <form id="gform" method="POST" action="{$index_url}{$resource_path}/add_credit/{$agency_contractor_id}">
  <tr>		
		<td height="10">Agency Name: </td>
    <td height="10">
    	<b>{$agency_name}</b>
    </td>
  </tr>
  <tr>		
		<td height="10">Invoice Date: </td>
    <td height="10">
    	{$invoice_date}			
    </td>
  </tr>	
  <tr>		
		<td height="10">Credit Amount: *</td>
    <td height="10">
    	<input type="text" name="credit_amount" value="" id="credit_amount"  size="9" maxlength="9" /> 
    </td>
  </tr>	
	<tr>		
		<td height="10" valign="top">Notes: *</td>
    <td height="10">
    	<textarea name="notes"  rows="4" cols="40"></textarea>
    </td>
  </tr>	
  <tr>
    <td colspan="2" height="100%" valign="bottom">
    	<input type="submit" class="btn" value="Save">
    	<input type="button" class="btn" value="{$grl_cancel}" onclick="parent.dhxWins.window('w2').close()">
    </td>
  </tr>
</table> 

<table border="0" height="100%" width="100%" cellpadding="0" cellspacing="0" align="center"> 
  <tr> 
    <td>
		<input type="text" name="keyword" id="keyword">
		<select name="search_type" onchange="if(getValue('keyword'))loadGrid()">
			<option value="pat_patient.first_name">Patient Name</option>
			<option value="agency_name">Agency Name</option>
			<option value="contact_name">Contact Name</option>
		</select>
		<input type="submit" value="Search">
    </td>
    <td align="right">
		<input type="radio" name="agency_type" onclick="loadGrid()" value="" checked id="at1"> <label for="at1">All</label>
		<input type="radio" name="agency_type" onclick="loadGrid()" value="A" id="at2"> <label for="at2">Agency</label>
		<input type="radio" name="agency_type" onclick="loadGrid()" value="C" id="at3"> <label for="at3">Contractor</label>
    </td>
  </tr>
</table> 
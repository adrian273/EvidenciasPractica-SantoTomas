<script language="JavaScript" type="text/javascript">

	function loadGrid () {literal}{{/literal}
	
		document.getElementById("grid_area").innerHTML = "";
		
	    grid = new dhtmlXGridObject("grid_area");
    	grid.setImagePath("{$base_url}style/grid/imgs/");
    	grid.setSkin("light");
    	//grid.enableDragAndDrop(true);
    	//grid.setDropHandler(dropHandler);
			grid.setOnRowSelectHandler(editRegister);
    	grid.loadXMLPost("{$index_url}{$resource_path}/groupReportGrid/{$rpt_profile_group_id}", 'gform');
    	grid.setSizes();
	  
	{literal}}{/literal}
	
	
	function editRegister ( id ) {literal}{{/literal}
	
		document.location = "{$index_url}{$resource_path}/editprofilereport/{$rpt_profile_group_id}/" + id;
	  
	{literal}}{/literal}


	function dropHandler (id) {literal}{{/literal}
	
		//ajax("{$index_url}{$resource_path}/applicationReorder/" + grid.getAllItemIds(","));
	  
	{literal}}{/literal}
	
	loadGrid ();
	
</script>
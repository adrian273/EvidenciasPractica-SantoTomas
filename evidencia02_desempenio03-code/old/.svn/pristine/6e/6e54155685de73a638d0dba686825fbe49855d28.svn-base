
<table cellpadding="5" cellspacing="5">

	<tr>
		<td>Report Group:<input type="hidden" name="id" value="{$id}" /></td>
		<td>
			<select name="group" id="group">
			
				{if $groups neq ''}{$groups}{else}<option value="">---</option>{/if}
				
			</select>
		</td>
	</tr>
	
	<tr>
		<td>Report Name:</td>
		
		<td><input type="text" name="name" id="name" value="{$name}" size="30" /></td>
	</tr>
	
	<tr>
		<td>Report Link:</td>
		
		<td><input type="text" name="link" id="link" value="{$link}" size="30" /></td>
	</tr>
	{if $id neq ''}
	<tr>
		<td>Position:</td>
		<td>
			<select name="position" id="position">
				{if $position neq ''}{$position}{else}<option value="">---</option>{/if}
			</select>
		
		</td>
	</tr>	
	{/if}
</table>
</fieldset>
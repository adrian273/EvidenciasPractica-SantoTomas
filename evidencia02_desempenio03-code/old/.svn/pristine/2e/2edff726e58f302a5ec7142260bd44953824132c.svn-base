
<table border="0" width="100%" cellpadding="0" cellspacing="4"> 
  <tr>
    <td colspan="4" class="subtitle"><img src="{$image_url}button_small_side.png" style="vertical-align: middle"> Primary Emergency Contact</td>
  </tr> 
  <tr>
    <td colspan="4" height="10"></td>
  </tr> 
  <tr>
    <td class="ftitle">Name</td>
    <td><input type="text" name="emerg_contact_name1" value="{$emerg_contact_name1}"></td>
    <td class="ftitle">Phone</td>
    <td><input type="text" name="emerg_contact_phone1" value="{$emerg_contact_phone1}"></td>
  </tr>
  <tr>
    <td class="ftitle">Address</td>
    <td><input type="text" name="emerg_contact_address1" value="{$emerg_contact_address1}"></td>
    <td class="ftitle">Ext.</td>
    <td><input type="text" name="emerg_contact_ext1" value="{$emerg_contact_ext1}"></td>
  </tr>
  <tr>
    <td class="ftitle">City</td>
    <td><input type="text" name="emerg_contact_city1" value="{$emerg_contact_city1}"></td>
    <td class="ftitle">Relationship</td>
    <td>{html_options options=$relationship_list selected=$emerg_contact_relation1 name='emerg_contact_relation1'}</td>
  </tr>
  <tr>
    <td class="ftitle">State</td>
    <td>{html_options options=$state_list selected=$emerg_contact_state1 name='emerg_contact_state1'}</td>
    <td class="ftitle">Comments</td>
    <td rowspan="2"><textarea name="emerg_contact_comm1" rows="2" cols="30" wrap="auto">{$emerg_contact_comm1}</textarea></td>
  </tr>
  <tr>
    <td class="ftitle">Zip</td>
    <td><input type="text" name="emerg_contact_zip1" value="{$emerg_contact_zip1}"></td>
  </tr>
  
  <tr>
    <td colspan="4" class="subtitle"><img src="{$image_url}button_small_side.png" style="vertical-align: middle"> Secundary Emergency Contact</td>
  </tr> 
  <tr>
    <td colspan="4" height="10"></td>
  </tr> 
  <tr>
    <td class="ftitle">Name</td>
    <td><input type="text" name="emerg_contact_name2" value="{$emerg_contact_name2}"></td>
    <td class="ftitle">Phone</td>
    <td><input type="text" name="emerg_contact_phone2" value="{$emerg_contact_phone2}"></td>
  </tr>
  <tr>
    <td class="ftitle">Address</td>
    <td><input type="text" name="emerg_contact_address2" value="{$emerg_contact_address2}"></td>
    <td class="ftitle">Ext.</td>
    <td><input type="text" name="emerg_contact_ext2" value="{$emerg_contact_ext2}"></td>
  </tr>
  <tr>
    <td class="ftitle">City</td>
    <td><input type="text" name="emerg_contact_city2" value="{$emerg_contact_city2}"></td>
    <td class="ftitle">Relationship</td>
    <td>{html_options options=$relationship_list selected=$emerg_contact_relation2 name='emerg_contact_relation2'}</td>
  </tr>
  <tr>
    <td class="ftitle">State</td>
    <td>{html_options options=$state_list selected=$emerg_contact_state2 name='emerg_contact_state2'}</td>
    <td class="ftitle">Comments</td>
    <td rowspan="3"><textarea name="emerg_contact_comm2" rows="2" cols="30" wrap="auto">{$emerg_contact_comm2}</textarea></td>
  </tr>
  <tr>
    <td class="ftitle">Zip</td>
    <td><input type="text" name="emerg_contact_zip2" value="{$emerg_contact_zip2}"></td>
  </tr>
  
</table> 

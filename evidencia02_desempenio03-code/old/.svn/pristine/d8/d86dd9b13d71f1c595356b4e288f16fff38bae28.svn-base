<table border="0" width="100%" cellpadding="2" cellspacing="0"> 
  <input type="hidden" name="user_id" value="{$user_id}">
  <input type="hidden" name="user_email" value="{$user_email}">
  <input type="hidden" name="password" value="{$password}">
  <tr>
    <td colspan="2" height="10">
      <font color="blue"><i>Passwords must be at least 6 characters long, using both letters and numbers.</i></font>
    </td>
  </tr> 
  <tr>
    <td colspan="2" class="subtitle"><img src="{$image_url}button_small_side.png" style="vertical-align: middle"> Current Login Password</td>
  </tr> 
  <tr>
    <td colspan="2" height="10"></td>
  </tr> 
  <tr>
    <td class="ftitle">Current Login Password</td>
    <td><input type="password" name="old_pass" value=""> *</td>
  </tr>
  <tr>
    <td colspan="2" height="10"></td>
  </tr> 

  <tr>
    <td colspan="2" class="subtitle"><img src="{$image_url}button_small_side.png" style="vertical-align: middle"> Change Login Password</td>
  </tr> 
  <tr>
    <td class="ftitle">New Login Password</td>
    <td><input type="password" name="new_pass" value=""> *</td>
  </tr>
  <tr>
    <td class="ftitle">Confirm New Login Password</td>
    <td><input type="password" name="cf_new_pass" value=""> *</td>
  </tr>

  <tr>
    <td colspan="2" height="10"></td>
  </tr> 
  <tr>
    <td colspan="2" class="subtitle"><img src="{$image_url}button_small_side.png" style="vertical-align: middle"> Change Electronic Signature</td>
  </tr> 
  <tr>
    <td class="ftitle">New Electronic Signature</td>
    <td><input type="password" name="e_new_pass" value=""> *</td>
  </tr>
  <tr>
    <td class="ftitle">Confirm Electronic Signature</td>
    <td><input type="password" name="e_cf_new_pass" value=""> *</td>
  </tr>
  
</table> 
